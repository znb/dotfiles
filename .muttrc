# source our other config files
source ~/.mutt/colours
source ~/.mutt/sidebar
source ~/.mutt/bindings
source ~/.mutt/aliases

# mailbox settings
set imap_user = "USER"
set imap_pass = "PASSWORD"
set smtp_url = "smtp://USER@HOST:PORT/"
set smtp_pass = "PASSWORD"
set from = "FROM ADDRESS"
set realname = "NAME"
mailboxes =INBOX
set folder = "imaps://RHOST:PORT"
set spoolfile = "+INBOX"
set postponed = "+INBOX.Drafts"
set record = "+INBOX.Sent Messages"
set imap_check_subscribed
set hostname = DOMAIN
set mail_check = 120
set timeout = 300
set imap_keepalive = 600

# cache settings
set header_cache=~/.mutt/cache/headers
set message_cachedir=~/.mutt/cache/bodies
set certificate_file=~/.mutt/certs

# general settings
set fast_reply = yes
set move = no
set include
set auto_tag = yes
set envelope_from
set use_from

# alias settings
set alias_file=~/.mutt/aliases
set sort_alias= alias
set reverse_alias=yes

# editor settings
set tmpdir="/Users/mle/.mutt/tmp"

# interface settings
ignore "Authentication-Results:"
ignore "DomainKey-Signature:"
ignore "DKIM-Signature:"
hdr_order Date From To Cc
alternative_order text/plain text/html *
auto_view text/html

# formatting
set status_format=" %r %b %f   New:%n   Del:%d   TotMsgs:%m Tag:%t Flag:%F Size:%l %>  Lim:%V (%P)"
set index_format = " %Z | %-70.70s | %-15.15L | %{%b %d} | (%4c)"

# pager settings
set pager_index_lines=10

# sorting
set sort = 'threads'
set sort_aux = 'reverse-last-date-received'

