" General
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab
set smartindent autoindent
set smartcase
set showmatch
set noerrorbells
set history=10
set paste

" Searches
set incsearch
set nohlsearch
set ignorecase smartcase

" Enable line numbers
set number

" Spelling
set nospell
set showcmd
set spell spelllang=en_gb

" Folding
set foldenable
set foldlevelstart=10
set foldnestmax=10
set foldmethod=indent


" Cursors
set cuc
set cul
set ruler

" Enhanced command line completion
set wildmenu

" make vim more useful
set nocompatible
set ttyfast
set binary
set noeol

" Backups
set backup
set backupdir=~/.vim/backups
set directory=~/.vim/swaps
if exists("&undodir")
	set undodir=~/.vim/undo
endif
set writebackup

" Show “invisible” characters
set lcs=tab:▸\ ,trail:·,eol:¬,nbsp:_
set list

" Dont show intro message
set shortmess=atI

" syntax hilighting
syntax on
hi SpellBad cterm=underline gui=underline,bold

" status bar
set laststatus=2
set encoding=utf-8
set guifont=Sauce\ Code\ Powerline
set t_Co=256
set fillchars+=stl:\ ,stlnc:\

" Colours
set background=dark
color dracula

" airline settings
let g:airline#extensions#tabline#enabled = 1
let g:airline#extensions#tabline#formatter = 'unique_tail_improved'
let g:airline_powerline_fonts = 1


" Syntastic
let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0

" Terraform
let g:terraform_align=1
let g:terraform_fold_sections=1
let g:terraform_remap_spacebar=1
let g:terraform_fmt_on_save=1

" Python-mode
let g:pymode_rope_lookup_project = 0
let g:pymode_rope_completion = 0
let g:pymode_rope_complete_on_dot = 0
let g:pymode_python = 'python'
let g:pymode_rope_completion_bind = '<C-Space>'
let g:pymode_lint_ignore = "E501,W,E101,C901"

" Macros
command W :execute ':silent w !sudo tee % > /dev/null' | :edit!

" Mappings
let mapleader=","
nnoremap <space> za
nnoremap <leader>w :w<CR><CR>
nnoremap <leader>s :set spell<CR><CR>
nnoremap <leader>n :set nospell<CR><CR>

" Autogroups
augroup configgroup
    autocmd!
    autocmd VimEnter * highlight clear SignColumn
    autocmd BufWritePre *.php,*.py,*.js,*.txt,*.hs,*.java,*.md
                \:call <SID>StripTrailingWhitespaces()
    autocmd FileType java setlocal noexpandtab
    autocmd FileType java setlocal list
    autocmd FileType java setlocal listchars=tab:+\ ,eol:-
    autocmd FileType java setlocal formatprg=par\ -w80\ -T4
    autocmd FileType php setlocal expandtab
    autocmd FileType php setlocal list
    autocmd FileType php setlocal listchars=tab:+\ ,eol:-
    autocmd FileType php setlocal formatprg=par\ -w80\ -T4
    autocmd FileType ruby setlocal tabstop=2
    autocmd FileType ruby setlocal shiftwidth=2
    autocmd FileType ruby setlocal softtabstop=2
    autocmd FileType ruby setlocal commentstring=#\ %s
    autocmd FileType python setlocal commentstring=#\ %s
    autocmd FileType terraform setlocal commentstring=#%s
    autocmd BufEnter *.cls setlocal filetype=java
    autocmd BufEnter *.zsh-theme setlocal filetype=zsh
    autocmd BufEnter Makefile setlocal noexpandtab
    autocmd BufEnter *.sh setlocal tabstop=2
    autocmd BufEnter *.sh setlocal shiftwidth=2
    autocmd BufEnter *.sh setlocal softtabstop=2
augroup END
