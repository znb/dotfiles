# general options
term = "xterm-256color"
auto-update = check
link-url = true
shell-integration = zsh
shell-integration-features = no-cursor,sudo,no-title
mouse-hide-while-typing = true
scrollback-limit = 1000000
window-save-state = always
window-decoration = true

# clipboard
clipboard-paste-protection = true
clipboard-trim-trailing-spaces = true
copy-on-select = clipboard

# theme
theme = catppuccin-mocha
background-opacity = 0.85
background-blur-radius = 10
font-family = "Hack Nerd Font Mono"
font-size = 16
bold-is-bright = true
unfocused-split-opacity = 0.70

macos-titlebar-style = native
macos-titlebar-proxy-icon = hidden
macos-option-as-alt = true

# quick terminal
quick-terminal-position = bottom
quick-terminal-screen = main
quick-terminal-autohide = true

# keymaps
keybind = global:ctrl+`=toggle_quick_terminal
keybind = cmd+r=reload_config

# keymaps - tabs
keybind = shift+cmd+h=previous_tab
keybind = shift+cmd+l=next_tab

# keymaps - create splits
keybind = cmd+s>l=new_split:right
keybind = cmd+s>h=new_split:left
keybind = cmd+s>k=new_split:up
keybind = cmd+s>j=new_split:down
keybind = cmd+s>z=toggle_split_zoom
keybind = cmd+s>e=equalize_splits

# keymaps - navigate splits
keybind = cmd+h=goto_split:left
keybind = cmd+l=goto_split:right
keybind = cmd+k=goto_split:top
keybind = cmd+j=goto_split:bottom

# keymaps - resizing
keybind = ctrl+shift+h=resize_split:left,10
keybind = ctrl+shift+l=resize_split:right,10
keybind = ctrl+shift+k=resize_split:up,10
keybind = ctrl+shift+j=resize_split:down,10

# keymaps - claude
keybind = shift+enter=text:\n
