ZSH=$HOME/.oh-my-zsh
ZSH_THEME="fishy"
plugins=(git ssh-agent)

source $ZSH/oh-my-zsh.sh

export PATH="/usr/local/sbin:/usr/local/bin:/usr/bin:~/bin"
export MANPATH="/usr/local/man:$MANPATH"

# Powerline
. /usr/share/zsh/site-contrib/powerline.zsh
export PYTHONPATH=/usr/lib/python3.3/site-packages

alias lrt='ls -lrt'
alias ta='tmux attach'
alias sx='startx'
alias uports='lsof -n -i udp -P'
alias tports='lsof -n -i tcp -P'
alias bounce='sudo reboot'
alias awww='sudo shutdown -h now'
alias pss='pacman -Ss'
alias pmi='sudo pacman -S'
alias pmu='sudo pacman -Syu'
alias pis='ping -c 1 ftp.is.co.za'
alias widex='/home/matt/.screenlayout/extended.sh'
alias night='sudo pm-suspend' 
