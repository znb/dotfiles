ZSH=$HOME/.oh-my-zsh 
source $ZSH/oh-my-zsh.sh

ZSH_THEME="half-life"
DISABLE_UPDATE_PROMPT=true
DISABLE_AUTO_UPDATE=false
DISABLE_LS_COLORS=false
HIST_STAMPS="yyyy/mm/dd"
plugins=(git osx nmap history tmux brew sudo copydir copyfile dirhistory web-search)

# User configuration

export PATH="$PATH:/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin:~/Scripts:${GOPATH//://bin:}/bin:~/Tools/bin"
export LSCOLORS=GxFxCxDxBxegedabagaced

# Aliases
alias ls='exa'
alias la='exa -la'
alias ll='exa -l'
alias lrt='exa -l -snew'
alias gl="git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gcm='git commit -m'
alias mv='mv -v'
alias rm='rm -vi'
alias srm='srm -vi'
alias cp='cp -v'
alias pis='ping -o ftp.is.co.za'
alias pii='ping -o 8.8.8.8'
alias svim='sudo /usr/bin/vim'
alias skill='sudo kill -9'
alias tports='lsof -n -i tcp -P -sTCP:LISTEN'
alias uports='lsof -n -i udp -P'
alias dockerclean='docker ps -a | grep Exited | cut -d" " -f1 | xargs docker rm '
alias ofs='lsof | grep '
alias bup='brew update && brew upgrade && brew cleanup'
alias pv='qlmanage -p '

# Python
alias python='/usr/local/Cellar/python@3.9/3.9.5/bin/python3'
alias pip='/usr/local/Cellar/python@3.9/3.9.5/bin/pip3'

# Terraform
alias tp='terraform plan'
alias ta='terraform apply'
alias tpd='terraform plan -destroy'
alias td='terraform destroy'
alias ti='terraform init'

# AWS Vault
alias avl='aws-vault list'
alias avli='aws-vault login'

# Tools
alias vt='/Users/matt/Tools/vt-cli/vt'
alias privcheck='/Applications/Privileges.app/Contents/Resources/PrivilegesCLI --status'
alias privon='/Applications/Privileges.app/Contents/Resources/PrivilegesCLI --add'
alias privoff='/Applications/Privileges.app/Contents/Resources/PrivilegesCLI --remove'
